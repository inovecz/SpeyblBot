{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.3",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Inove s.r.o.",
        "websiteUrl": "https://www.speybl.com",
        "privacyUrl": "https://www.speybl.com/terms-and-conditions",
        "termsOfUseUrl": "https://www.speybl.com/terms-and-conditions"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "SpeyblBot",
        "full": "SpeyblBot"
    },
    "description": {
        "short": "HR software for all your needs",
        "full": "Staff Management. Monitoring attendance, onboarding, and alerts. Integration into existing systems. Employee self-service and easy reporting."
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "personal",
                "team",
                "groupchat"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}